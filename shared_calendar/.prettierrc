{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.py",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "quoteProps": "as-needed"
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 2,
                "printWidth": 80,
                "singleQuote": true
            }
        }
    ]
} 